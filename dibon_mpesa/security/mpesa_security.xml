<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create module category -->
    <record model="ir.module.category" id="module_category_mpesa_pay_integration">
        <field name="name">MPesa Payment Integration</field>
        <field name="description">Manage MPesa payment integration settings</field>
        <field name="sequence">20</field>
    </record>

    <!-- Define user groups -->
    <record id="group_mpesa_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_mpesa_pay_integration"/>
    </record>

    <record id="group_mpesa_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_mpesa_pay_integration"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="implied_ids" eval="[(4, ref('group_mpesa_user'))]"/>
    </record>

    <!-- Add users to the group by default -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('dibon_mpesa.group_mpesa_user'))]"/>
    </record>
</odoo>