<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mpesa_sms_config_form" model="ir.ui.view">
        <field name="name">mpesa.sms.config.form</field>
        <field name="model">mpesa.sms.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_enabled"/>
                    </group>
                    <group invisible="not is_enabled">
                        <field name="endpoint" required="is_enabled"/>
                        <field name="api_key" required="is_enabled"/>
                        <field name="sender_id" required="is_enabled"/>
                        <field name="sms_template"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mpesa_sms_config_tree" model="ir.ui.view">
        <field name="name">mpesa.sms.config.tree</field>
        <field name="model">mpesa.sms.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_enabled"/>
                <field name="sender_id"/>
            </tree>
        </field>
    </record>

    <record id="action_mpesa_sms_config" model="ir.actions.act_window">
        <field name="name">SMS Sender ID</field>
        <field name="res_model">mpesa.sms.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- SMS Log Views -->
    <record id="view_mpesa_sms_log_form" model="ir.ui.view">
        <field name="name">mpesa.sms.log.form</field>
        <field name="model">mpesa.sms.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sender_id"/>
                        <field name="recipient"/>
                        <field name="message"/>
                        <field name="status"/>
                        <field name="cost"/>
                        <field name="reference"/>
                        <field name="transaction_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mpesa_sms_log_tree" model="ir.ui.view">
        <field name="name">mpesa.sms.log.tree</field>
        <field name="model">mpesa.sms.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="name"/>
                <field name="sender_id"/>
                <field name="recipient"/>
                <field name="status"/>
                <field name="cost"/>
                <field name="reference"/>
            </tree>
        </field>
    </record>

    <!-- SMS Log Kanban View -->
    <record id="view_mpesa_sms_log_kanban" model="ir.ui.view">
        <field name="name">mpesa.sms.log.kanban</field>
        <field name="model">mpesa.sms.log</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="recipient"/>
                <field name="status"/>
                <field name="cost"/>
                <field name="reference"/>
                <field name="create_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="recipient"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-attf-class="badge #{record.status.raw_value == 'success' ? 'bg-success' : 'bg-danger'}">
                                            <field name="status"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SMS Log Action -->
    <record id="action_mpesa_sms_logs" model="ir.actions.act_window">
        <field name="name">SMS Logs</field>
        <field name="res_model">mpesa.sms.log</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No SMS logs found
            </p>
            <p>
                SMS logs will appear here when messages are sent.
            </p>
        </field>
    </record>

    <!-- MPesa Transactions View -->
    <record id="view_payment_transaction_tree" model="ir.ui.view">
        <field name="name">payment.transaction.tree</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='done'" decoration-danger="state=='cancel'">
                <field name="reference"/>
                <field name="create_date"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="mpesa_phone"/>
                <field name="mpesa_receipt"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_transaction_form" model="ir.ui.view">
        <field name="name">payment.transaction.form</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference"/>
                            <field name="amount"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="mpesa_phone"/>
                            <field name="mpesa_receipt"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update MPesa Transaction Action -->
    <record id="action_mpesa_dashboard" model="ir.actions.act_window">
        <field name="name">MPesa Transactions</field>
        <field name="res_model">payment.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('provider_code', '=', 'mpesa_online')]</field>
        <field name="context">{
            'default_provider_code': 'mpesa_online'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No MPesa transactions yet
            </p>
            <p>
                MPesa transactions will appear here when customers make payments.
            </p>
        </field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_sms_dashboard" model="ir.actions.act_window">
        <field name="name">SMS Dashboard</field>
        <field name="res_model">mpesa.sms.config</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menu Structure - Define root first -->
    <menuitem id="menu_mpesa_root"
        name="MPesa SMS"
        web_icon="dibon_mpesa,static/description/icon.png"
        sequence="10"/>

    <!-- Top level menus - All independent -->
    <menuitem id="menu_mpesa_dashboard"
        name="Dashboard"
        parent="menu_mpesa_root"
        action="action_sms_dashboard"
        sequence="10"/>

    <menuitem id="menu_sms_dashboard"
        name="SMS Dashboard"
        parent="menu_mpesa_root"
        action="action_sms_dashboard"
        sequence="20"/>
        
    <menuitem id="menu_mpesa_transactions_dashboard"
        name="MPesa Transactions"
        parent="menu_mpesa_root"
        action="action_mpesa_dashboard"
        sequence="30"/>

    <menuitem id="menu_mpesa_sms_logs"
        name="SMS Notification Logs"
        parent="menu_mpesa_root"
        action="action_mpesa_sms_logs"
        sequence="40"/>

    <menuitem id="menu_mpesa_configuration"
        name="Configuration"
        parent="menu_mpesa_root"
        sequence="100"/>

    <!-- Configuration submenus -->
    <!-- <menuitem id="menu_mpesa_general_config"
        name="MPesa Configuration"
        parent="menu_mpesa_configuration"
        action="payment.action_payment_provider"
        sequence="5"/> -->

        <menuitem id="menu_mpesa_general_config"
        name="MPesa Configuration"
        parent="menu_mpesa_configuration"
        action="payment.action_payment_provider"
        sequence="5"/>


    <menuitem id="menu_mpesa_sms_config"
        name="SMS Sender IDs Configuration"
        parent="menu_mpesa_configuration"
        action="action_mpesa_sms_config"
        sequence="10"/>
</odoo>
