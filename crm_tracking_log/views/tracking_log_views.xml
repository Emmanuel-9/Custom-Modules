<odoo>
    <!-- Tree View -->
    <record id="crm_tracking_log_tree_view" model="ir.ui.view">
        <field name="name">crm.tracking.log.tree</field>
        <field name="model">crm.tracking.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="lead_id"/>
                <field name="user_id"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="timestamp"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="crm_tracking_log_kanban_view" model="ir.ui.view">
        <field name="name">crm.tracking.log.kanban</field>
        <field name="model">crm.tracking.log</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="user_id"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="user_id"/></strong><br/>
                            <div><strong>Lead:</strong> <field name="lead_id"/></div>
                            <div><strong>Lat:</strong> <field name="latitude"/></div>
                            <div><strong>Long:</strong> <field name="longitude"/></div>
                            <div><strong>Time:</strong> <field name="timestamp"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View -->
    <record id="crm_tracking_log_graph_view" model="ir.ui.view">
        <field name="name">crm.tracking.log.graph</field>
        <field name="model">crm.tracking.log</field>
        <field name="arch" type="xml">
            <graph string="Tracking Logs" type="bar">
                <field name="timestamp" type="row"/>
                <field name="user_id" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_crm_tracking_log" model="ir.actions.act_window">
        <field name="name">Tracking Logs</field>
        <field name="res_model">crm.tracking.log</field>
        <field name="view_mode">tree,form,kanban,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and track salesperson location logs (with longitude and latitude) linked to CRM leads.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_crm_tracking_log_root"
              name="Tracking Logs"
              parent="crm.crm_menu_root"
              sequence="80"/>

    <menuitem id="menu_crm_tracking_log"
              name="Logs"
              parent="menu_crm_tracking_log_root"
              action="action_crm_tracking_log"/>
</odoo>
