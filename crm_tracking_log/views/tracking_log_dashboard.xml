<odoo>
  <!-- Graph View -->
  <record id="view_crm_lead_tracking_log_graph" model="ir.ui.view">
    <field name="name">crm.lead.tracking.log.graph</field>
    <field name="model">crm.lead.tracking.log</field>
    <field name="arch" type="xml">
      <graph string="Tracking Log Graph" type="bar">
        <field name="user_id" type="row"/>
        <field name="status" type="col"/>
        <field name="id" type="measure"/>
      </graph>
    </field>
  </record>

  <!-- Pivot View -->
  <record id="view_crm_lead_tracking_log_pivot" model="ir.ui.view">
    <field name="name">crm.lead.tracking.log.pivot</field>
    <field name="model">crm.lead.tracking.log</field>
    <field name="arch" type="xml">
      <pivot string="Tracking Log Pivot">
        <field name="user_id"/>
        <field name="lead_id"/>
        <!-- <field name="city"/>
        <field name="country"/>
        <field name="status"/> -->
        <field name="date"/>
      </pivot>
    </field>
  </record>

  <!-- Kanban View (Optional) -->
  <record id="view_crm_lead_tracking_log_kanban" model="ir.ui.view">
    <field name="name">crm.lead.tracking.log.kanban</field>
    <field name="model">crm.lead.tracking.log</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="status"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <strong><field name="lead_id"/></strong><br/>
              <small><field name="user_id"/></small><br/>
              <span t-field="record.city"/> / <span t-field="record.country"/>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Combined Action for Dashboard -->
  <record id="action_crm_lead_tracking_log_dashboard" model="ir.actions.act_window">
    <field name="name">Tracking Dashboard</field>
    <field name="res_model">crm.lead.tracking.log</field>
    <field name="view_mode">pivot,graph,kanban</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No logs to display. Start tracking leads!
      </p>
    </field>
  </record>

  <menuitem id="menu_crm_tracking_log_dashboard"
            name="Tracking Dashboard"
            parent="crm.crm_menu_root"
            action="action_crm_lead_tracking_log_dashboard"
            sequence="55"/>
</odoo>
