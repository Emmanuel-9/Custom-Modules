<odoo>
    <record id="view_tracking_log_report_wizard_form" model="ir.ui.view">
        <field name="name">tracking.log.report.wizard.form</field>
        <field name="model">report.tracking.log.wizard</field>
        <field name="arch" type="xml">
            <form string="Tracking Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="report_format"/>
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="Generate" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tracking_log_report_wizard" model="ir.actions.act_window">
        <field name="name">Tracking Log Report</field>
        <field name="res_model">report.tracking.log.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_tracking_log_report" name="Tracking Report"
              parent="base.crm_menu_reporting"
              action="action_tracking_log_report_wizard"/>
</odoo>
