<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_settings_item_count">
            <field name="name">res.config.setting.pos.item.form.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="after">
                    <h2>Product Barcode/QR Scanner</h2>
                    <div class="row mt16 o_settings_container" id="qrcode_bqrcode_scanner">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="scan_mobile_type"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="scan_mobile_type"/>
                            </div>

                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="continue_scan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="continue_scan"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_success"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_success"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_success_sound"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_success_sound"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_faild"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_faild"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_faild_sound"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="product_faild_sound"/>
                            </div>
                        </div>
                    </div>
                    <h2>Customer Barcode/QR Scanner</h2>
                    <div class="row mt16 o_settings_container" id="qrcode_customer_scanner">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="customer_scan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="customer_scan"/>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>