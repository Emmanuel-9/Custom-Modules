<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="loan_closure_wizard_form">
        <field name="name">Loan Closure Reason</field>
        <field name="model">loan.closure.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="closure_reason"/>
                        <field name="comment"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Submit" name="loan_closure" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>