<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_extended_qr_generator" model="ir.ui.view">
        <field name="name">res.config.settings.extended.qr.generator</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="after">
                <h2>Product QR Code Generator</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="product_qr_code_generator"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="product_qr_code_generator"/>
                            <div class="text-muted">
                                Generate QR Code At The Time Of Product Creation
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>